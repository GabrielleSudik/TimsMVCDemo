@model DataLibrary.Models.OrderModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model is null)
{
    <h4>The requested item was not found.</h4>
}
else
{
    <div class="h4">
        Are you sure you want to delete the order from @Model.OrderDate?
    </div>

    <form asp-action="Delete">
        <!--remember, that last line is what links this form to the Delete() methods.-->
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
}